<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QrScanFragment"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <androidx.camera.view.PreviewView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/previewView" >


        </androidx.camera.view.PreviewView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/image"
                android:background="@color/black_transparent"
                android:gravity="center" />

            <TextView
                android:id="@+id/view2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/image"
                android:background="@color/black_transparent"/>

            <TextView
                android:id="@+id/view3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/image"
                android:layout_above="@id/view2"
                android:layout_below="@id/view1"
                android:background="@color/black_transparent"/>

            <TextView
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/view2"
                android:layout_below="@id/view1"
                android:layout_toRightOf="@+id/image"
                android:background="@color/black_transparent"
                android:gravity="center" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_crop_scan" />

            <Button
                android:id="@+id/flash"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/image"
                android:layout_alignEnd="@+id/image"
                android:layout_marginBottom="80dp"
                android:drawableTop="@drawable/ic_flashlight_on"
                android:fontFamily="arial"
                android:text="Đèn pin"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:theme="@style/Button.Main"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/btnPhoto_library"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/image"
                android:layout_alignStart="@+id/image"
                android:layout_marginBottom="80dp"
                android:drawableTop="@drawable/ic_photo_library"
                android:fontFamily="arial"
                android:text="Thư viện"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:theme="@style/Button.Main"
                app:iconPadding="0dp" />

        </RelativeLayout>

    </FrameLayout>

</LinearLayout>