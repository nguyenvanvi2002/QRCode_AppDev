<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trình tạo mã QR"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/url_create"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_link"
            android:padding="25dp"
            android:background="@drawable/background_button_corner_3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Trang web"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/url_create"
            android:layout_alignStart="@id/url_create"
            android:layout_alignEnd="@id/url_create"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/text_create"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/url_create"
            android:background="@drawable/background_button_corner_3"
            android:padding="25dp"
            android:src="@drawable/ic_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Văn bản"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/text_create"
            android:layout_alignStart="@id/text_create"
            android:layout_alignEnd="@id/text_create"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/wifi_create"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_wifi_maincolor"
            android:padding="25dp"
            android:background="@drawable/background_button_corner_3"
            android:layout_toRightOf="@id/text_create"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Wi-Fi"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/wifi_create"
            android:layout_alignStart="@id/wifi_create"
            android:layout_alignEnd="@id/wifi_create"
            android:gravity="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/phone_number_create"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_phone"
            android:padding="25dp"
            android:background="@drawable/background_button_corner_3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Điện thoại"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/phone_number_create"
            android:layout_alignStart="@id/phone_number_create"
            android:layout_alignEnd="@id/phone_number_create"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/sms_create"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_sms"
            android:padding="25dp"
            android:background="@drawable/background_button_corner_3"
            android:layout_toRightOf="@+id/phone_number_create"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tin nhắn"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/sms_create"
            android:layout_alignStart="@id/sms_create"
            android:layout_alignEnd="@id/sms_create"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/contact_create"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_contact"
            android:padding="25dp"
            android:background="@drawable/background_button_corner_3"
            android:layout_toRightOf="@id/sms_create"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_create"
            android:layout_alignStart="@id/contact_create"
            android:layout_alignEnd="@id/contact_create"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Liên hệ"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/event_create"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_event"
            android:padding="25dp"
            android:background="@drawable/background_button_corner_3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_create"
            android:layout_alignStart="@id/event_create"
            android:layout_alignEnd="@id/event_create"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Sự kiện"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/email_create"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_email"
            android:padding="25dp"
            android:background="@drawable/background_button_corner_3"
            android:layout_toRightOf="@+id/event_create"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/email_create"
            android:layout_alignStart="@id/email_create"
            android:layout_alignEnd="@id/email_create"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/card_create"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_card"
            android:padding="25dp"
            android:background="@drawable/background_button_corner_3"
            android:layout_toRightOf="@id/email_create"
            android:layout_marginLeft="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Thẻ của tôi"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_below="@id/card_create"
            android:layout_alignStart="@id/card_create"
            android:layout_alignEnd="@id/card_create"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>