<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:alpha="1.0"
    android:background="@color/black">


    <RelativeLayout
        android:id="@+id/frame_show"
        android:layout_width="450dp"
        android:layout_height="600dp"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/background_fragment"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="Hướng máy ảnh của bạn về phía mã để tự động quét "
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tutorial1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:text="1.Tránh ánh sáng phản chiếu hoặc đổ bóng trên mã"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txt_tutorial2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tutorial1"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:text="2.Đặt điện thoại của bạn sao cho điện thoại hướng về phía mã mà không cần đổ nghiêng"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/rectangle_1"
            android:layout_width="135dp"
            android:layout_height="121dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="320dp"
            android:src="@drawable/group_21"
            app:iconPadding="0dp" />

        <ImageView
            android:id="@+id/rectangle_2"
            android:layout_width="135dp"
            android:layout_height="121dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="320dp"
            android:src="@drawable/rectangle_22"
            app:iconPadding="0dp" />

        <ImageView
            android:id="@+id/rectangle_3"
            android:layout_width="135dp"
            android:layout_height="121dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="230dp"
            android:layout_marginTop="320dp"
            android:src="@drawable/ic_qr_true"
            app:iconPadding="0dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="55dp"
            android:layout_marginTop="340dp"
            android:src="@drawable/group"
            app:iconPadding="0dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="250dp"
            android:layout_marginTop="340dp"
            android:src="@drawable/group"
            app:iconPadding="0dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="275dp"
            android:layout_marginTop="415dp"
            android:src="@drawable/ic_true"
            app:iconPadding="0dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="415dp"
            android:src="@drawable/icon"
            app:iconPadding="0dp" />

        <TextView
            android:id="@+id/allow"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="490dp"
            android:layout_marginEnd="57dp"
            android:background="@drawable/background_button_corner_1"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>